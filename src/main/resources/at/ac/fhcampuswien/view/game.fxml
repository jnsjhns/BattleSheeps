<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.ac.fhcampuswien.controller.GameController"
            style="-fx-background-color: transparent;">

    <top>
        <HBox alignment="CENTER" spacing="200">
            <Label fx:id="opponentLabel"/>
            <Label fx:id="currentPlayerLabel"/>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="100">
            <StackPane fx:id="opponentBoardContainer"
                       prefWidth="400"
                       prefHeight="400"
                       style="-fx-background-color: transparent;"
                       mouseTransparent="false"/>

            <StackPane fx:id="currentPlayerBoardContainer"
                       prefWidth="400"
                       prefHeight="400"
                       style="-fx-background-color: transparent;"
                       mouseTransparent="false"/>
        </HBox>
    </center>

</BorderPane>
