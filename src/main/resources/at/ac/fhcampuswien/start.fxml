<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.StartController" spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <!-- Bild oben -->
    <ImageView fitWidth="400" fitHeight="283" preserveRatio="true">
        <image>
            <Image url="@Schaf.jpg" />
        </image>
    </ImageView>

    <!-- Eingabe für Player 1 -->
    <Label text="Player 1 Name:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <TextField fx:id="player1Name" promptText="Enter Player 1 Name" />

    <!-- Eingabe für Player 2 -->
    <Label text="Player 2 Name:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <TextField fx:id="player2Name" promptText="Enter Player 2 Name" />

    <!-- Start-Button -->
    <Button text="Start Game" onAction="#startGame" style="-fx-font-size: 14px;" />
</VBox>
